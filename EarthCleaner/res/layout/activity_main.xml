<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity" >

    <xfocus.game.MainSurfaceView
        android:id="@+id/msfv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

    <Button
        android:id="@+id/bt_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_stop"
        android:layout_alignLeft="@+id/bt_stop"
        android:onClick="up"
        android:text="up"
        android:textColor="#fff" />

    <Button
        android:id="@+id/bt_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_down"
        android:layout_toRightOf="@+id/bt_left"
        android:onClick="stop"
        android:text="stop"
        android:textColor="#fff" />

    <Button
        android:id="@+id/bt_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_stop"
        android:layout_alignParentBottom="true"
        android:onClick="down"
        android:text="down"
        android:textColor="#fff" />

    <Button
        android:id="@+id/bt_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt_stop"
        android:layout_toRightOf="@+id/bt_stop"
        android:onClick="right"
        android:text="right"
        android:textColor="#fff" />

    <Button
        android:id="@+id/bt_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/bt_stop"
        android:onClick="left"
        android:text="left"
        android:textColor="#fff" />

</RelativeLayout>